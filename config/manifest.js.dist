const Fs = require('fs');
const Pkg = require('../package.json');

let tlsOptions = null;
try {
  tlsOptions = {
    key: Fs.readFileSync(process.env.SEALOG_SERVER_TLS_PRIVKEY || '<privKey.pem>'),
    cert: Fs.readFileSync(process.env.SEALOG_SERVER_TLS_FULLCHAIN || '<fullchain.pem>')
  };
}
catch {
  console.warn('TLS (Https) not enabled');
}

const swagger_options = {
  info: {
    title: 'Sealog Server API Documentation',
    version: Pkg.version
  },
  tags: [
    {
      name: 'auth',
      description: 'the auth api'
    },
    {
      name: 'cruises',
      description: 'the cruises api'
    },
    {
      name: 'custom_vars',
      description: 'the custom_vars api'
    },
    {
      name: 'event_aux_data',
      description: 'the event_aux_data api'
    },
    {
