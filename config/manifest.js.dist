      description: 'the event_templates api'
    },
    {
      name: 'events',
      description: 'the events api'
    },
    {
      name: 'lowerings',
      description: 'the lowerings api'
    },
    {
      name: 'users',
      description: 'the users api'
    }
  ],
  grouping: 'tags',
  securityDefinitions: {
    jwt: {
      type: 'apiKey',
      name: 'Authorization',
      in: 'header'
    }
  },
  security: [{ jwt: [] }]
};

const {
  sealogDB,
  sealogDB_devel
} = require('../config/db_constants');

const port = process.env.SEALOG_SERVER_PORT || 8000;
let env = process.env.NODE_ENV || 'development';
env = (env === 'test') ? 'development' : env;
env = ['demo-vehicle','demo-vessel'].includes(env) ? 'demo' : env;


const envKey = (key) => {

  const configuration = {
    development: {
      host: '0.0.0.0',
      port,
      db: sealogDB_devel
    },
    debug: {
      host: '0.0.0.0',
      port,
      db: sealogDB
    },
    demo: {
      host: '0.0.0.0',
      port,
      db: sealogDB_devel
    },
    production: {
      host: '0.0.0.0',
      port,
      db: sealogDB
    }
  };

  return configuration[env][key];
};

const mongodb_URL = process.env.MONGO_URL || 'mongodb://localhost:27017/' + envKey('db');

const manifest = {
  server: {
    host: envKey('host'),
    port: envKey('port'),
    tls: tlsOptions,
    routes: {
      cors: true
    }
  },

  register: {
    plugins: [
      { plugin: 'hapi-auth-jwt2' },
      { plugin: 'hapi-mongodb', options:
        {
          url: mongodb_URL,
          settings: {
            maxPoolSize: 20,
            useNewUrlParser: true,
            useUnifiedTopology: true
          },
          decorate: true
        }
      },
      { plugin: './plugins/auth' },
      { plugin: './plugins/filesystem_init' },
      { plugin: './plugins/free_space' },
      { plugin: '@hapi/inert' },
      { plugin: '@hapi/vision' },
      { plugin: '@hapi/nes' },
      { plugin: './routes/api/v1/auth', options: {},
        routes: {
          prefix: '/sealog-server/api/v1'
        }
      },
      { plugin: './routes/api/v1/cruises', options: {},
        routes: {
          prefix: '/sealog-server/api/v1'
        }
      },
      { plugin: './routes/api/v1/custom_vars', options: {},
        routes: {
          prefix: '/sealog-server/api/v1'
        }
      },
      { plugin: './routes/default', options: {},
        routes: {
          prefix: '/sealog-server'
        }
      },
      { plugin: './routes/api/v1/event_aux_data', options: {},
        routes: {
          prefix: '/sealog-server/api/v1'
        }
      },
      { plugin: './routes/api/v1/event_exports', options: {},
