        }
      },
      { plugin: './routes/api/v1/event_templates', options: {},
        routes: {
          prefix: '/sealog-server/api/v1'
        }
      },
      { plugin: './routes/api/v1/events', options: {},
        routes: {
          prefix: '/sealog-server/api/v1'
        }
      },
      { plugin: './routes/api/v1/lowerings', options: {},
        routes: {
          prefix: '/sealog-server/api/v1'
        }
      },
      { plugin: './routes/api/v1/users', options: {},
        routes: {
